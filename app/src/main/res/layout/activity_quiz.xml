<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        />

    <TextView
        android:id="@+id/tv_quizOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who's the character in MLBB that says this line 'One shot one kill'"
        android:textSize="30sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="90dp"
        android:paddingHorizontal="60dp">

        <RadioGroup
            android:id="@+id/rg_quizRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rb_quizZilong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zilong"
                android:textSize="20sp"
                />

            <RadioButton
                android:id="@+id/rb_quizMiya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miya"
                android:textSize="20sp"
                />

            <RadioButton
                android:id="@+id/rb_quizFranco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Franco"
                android:textSize="20sp"
                />

            <RadioButton
                android:id="@+id/rb_quizLayla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layla"
                android:textSize="20sp"
                />

            <RadioButton
                android:id="@+id/rb_quizVale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vale"
                android:textSize="20sp"
                />

        </RadioGroup>

    </LinearLayout>
    <Button
        android:id="@+id/btn_quizSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20sp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="20dp"
        />

</LinearLayout>