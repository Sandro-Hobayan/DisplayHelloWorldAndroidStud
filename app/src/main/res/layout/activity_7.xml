<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator Activity"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_above="@+id/btnAll"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="50sp"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="20dp"
        />

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_above="@+id/result_tv"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:layout_marginVertical="20dp"
        />

    <LinearLayout
        android:id="@+id/btnAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/button_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="C"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_open_bracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="("
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_close_bracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text=")"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="/"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="7"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="8"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="9"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="*"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="4"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="5"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="6"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_subtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="-"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="1"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="2"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="3"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="+"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/button_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="AC"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="0"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="."
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/button_equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:text="="
                android:textSize="15sp"
                android:layout_margin="5dp"
                />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>