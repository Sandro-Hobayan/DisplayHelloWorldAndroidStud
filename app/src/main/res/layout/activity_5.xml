<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity5"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Form Acitvity"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/tv_5gen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginVertical="5dp"
        />

    <TextView
        android:id="@+id/tv_5name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginVertical="5dp"
        />

    <TextView
        android:id="@+id/tv_5age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginVertical="5dp"
        />

    <EditText
        android:id="@+id/et_5name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name:"
        android:textSize="25sp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        />

    <EditText
        android:id="@+id/et_5age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your age:"
        android:textSize="25sp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp">

        <RadioGroup
            android:id="@+id/rdg_5rbgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_5male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="30sp"
                android:layout_marginHorizontal="20dp"
                />

            <RadioButton
                android:id="@+id/rb_5female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="30sp"
                android:layout_marginHorizontal="20dp"
                />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btn_5submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Submit"
        android:textSize="25sp"
        android:textColorHint="@color/white"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="80dp"
        />

    <Button
        android:id="@+id/btn_5clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Clear"
        android:textSize="25sp"
        android:textColorHint="@color/white"
        android:backgroundTint="#D73131"
        android:layout_marginHorizontal="140dp"
        />



</LinearLayout>